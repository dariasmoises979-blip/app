name: Desplegar aplicaci√≥n a GKE

on:
  workflow_dispatch:
    inputs:
      environment:
        description: 'Selecciona el entorno de despliegue'
        required: true
        type: choice
        options:
          - development
          - staging
          - production

jobs:
  deploy:
    name: Llamar al workflow reusable de despliegue
    uses: ./.github/workflows/deploy-reusable.yml
    with:
      environment: ${{ github.event.inputs.environment }}
    secrets: inherit
